<!DOCTYPE html>
<html>
<head>
  <title>Kenchi üíñ</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      margin: 0;
      text-align: center;
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #ffccd5, #ffe6f0);
      overflow: hidden;
    }

    h1 {
      margin-top: 60px;
      font-size: 28px;
    }

    #yesBtn {
      font-size: 22px;
      padding: 15px 30px;
      margin: 20px;
      background-color: #ff4d88;
      color: white;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      transition: 0.3s;
      position: relative;
      z-index: 1;
    }

    #noBtn {
      position: fixed;
      font-size: 20px;
      padding: 12px 25px;
      background-color: grey;
      color: white;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      z-index: 9999; /* always above */
    }

    #message {
      font-size: 20px;
      color: #cc0066;
      margin-top: 20px;
      font-weight: bold;
      min-height: 40px;
      padding: 10px;
    }

    .heart {
      position: fixed;
      bottom: -10px;
      animation: floatUp 5s linear infinite;
      color: red;
      pointer-events: none;
    }

    @keyframes floatUp {
      0% { transform: translateY(0); opacity: 1; }
      100% { transform: translateY(-800px); opacity: 0; }
    }
  </style>
</head>

<body>

  <h1>Kenchi, Will You Be My Valentine? üíñ</h1>

  <button id="yesBtn">Yes ‚ù§Ô∏è</button>
  <button id="noBtn">No üò¢</button>

  <div id="message"></div>

<script>

let noCount = 0;
let musicStarted = false;

const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");
const messageBox = document.getElementById("message");
const music = new Audio("nanna-gudi.mp3");

const messages = [
  "Inond sathi youchne maadu kenchi ü•π",
  "Bangari do you think im not the one gor you ? üòïüò£",
  "Muddu yes button click maadu ‚ù§Ô∏è",
  "Chinni why do you hate me so much üòí",
  "Ayya riiii nangintha hudga beka nimge üßê",
  "Muchkond yes button press maadi üòú"
];

function startMusic() {
  if (!musicStarted) {
    music.play().catch(() => {});
    musicStarted = true;
  }
}

noBtn.addEventListener("click", function() {

  startMusic();

  if (noCount < messages.length) {
    messageBox.innerText = messages[noCount];
  }

  noCount++;

  if (noCount >= messages.length) {
    yesBtn.style.position = "fixed";
    yesBtn.style.top = "0";
    yesBtn.style.left = "0";
    yesBtn.style.width = "100vw";
    yesBtn.style.height = "100vh";
    yesBtn.style.fontSize = "45px";
    yesBtn.style.borderRadius = "0";
    noBtn.style.display = "none";
    messageBox.innerText = "Enough drama üòå Press YES ‚ù§Ô∏è";
    return;
  }

  yesBtn.style.fontSize = (22 + noCount * 6) + "px";

  // Safe movement area (avoid center)
  let x = Math.random() * (window.innerWidth - 120);
  let y = Math.random() * (window.innerHeight - 120);

  // Avoid center area where Yes is
  if (x > window.innerWidth / 3 && x < window.innerWidth / 1.5) {
    x = 10;
  }

  if (y > window.innerHeight / 3 && y < window.innerHeight / 1.5) {
    y = window.innerHeight - 100;
  }

  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";
});

yesBtn.addEventListener("click", function() {

  startMusic();

  document.body.innerHTML = `
    <div style="display:flex;justify-content:center;align-items:center;height:100vh;background:#ffccd5;flex-direction:column;">
      <h1 style="font-size:40px;color:#ff0066;">
        I love you too kenchi ‚ù§Ô∏è
      </h1>
      <div style="font-size:60px;">üíçüíïüòç</div>
    </div>
  `;

  setInterval(createHeart, 300);
});

function createHeart() {
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.innerText = "‚ù§Ô∏è";
  heart.style.left = Math.random() * window.innerWidth + "px";
  heart.style.fontSize = (Math.random() * 20 + 20) + "px";
  document.body.appendChild(heart);

  setTimeout(() => heart.remove(), 5000);
}

</script>

</body>
</html>
